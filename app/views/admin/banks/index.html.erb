<h1>Listing banks</h1>
  
<table id="bank-table-id" class="table">
<thead class="thead-light">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Actions</th>
  </tr>
 </thead>
 <tbody>
  <% @banks.each do |bank| %>
    <tr>
      <td><%= bank.title %></td>
      <td>
       <button class="btn btn-light"><%= link_to 'Destroy', admin_bank_path(bank), method: :delete, data: { confirm: 'Are you sure?' } %></button>
       
       <button class="btn btn-light"><%= link_to 'Edit', edit_admin_bank_path(bank) %></button>
      
       <button class="btn btn-light"><%= link_to 'Show', admin_bank_path(bank) %></button>
     </td>
      

    </tr>
    <%end%>
 </tbody>
 </thead>
 </table>
 <script>
 $(document).ready( function () {
  $('#bank-table-id thead tr')
        .clone(true)
        .addClass('filters')
        .appendTo('#bank-table-id thead');
  $('#bank-table-id').DataTable(
    {
        orderCellsTop: true,
        fixedHeader: true,
        initComplete: function () {
            var api = this.api();
 
            // For each column
            api
                .columns()
                .eq(0)
                .each(function (colIdx) {
                    // Set the header cell to contain the input element
                    var cell = $('.filters th').eq(
                        $(api.column(colIdx).header()).index()
                    );
                    var title = $(cell).text();
                    $(cell).html('<input type="text" placeholder="' + title + '" />');
 
                    // On every keypress in this input
                    $(
                        'input',
                        $('.filters th').eq($(api.column(colIdx).header()).index())
                    )
                        .off('keyup change')
                        .on('change', function (e) {
                            // Get the search value
                            $(this).attr('title', $(this).val());
                            var regexr = '({search})'; //$(this).parents('th').find('select').val();
 
                            var cursorPosition = this.selectionStart;
                            // Search the column for that value
                            api
                                .column(colIdx)
                                .search(
                                    this.value != ''
                                        ? regexr.replace('{search}', '(((' + this.value + ')))')
                                        : '',
                                    this.value != '',
                                    this.value == ''
                                )
                                .draw();
                        })
                        .on('keyup', function (e) {
                            e.stopPropagation();
 
                            $(this).trigger('change');
                            $(this)
                                .focus()[0]
                                .setSelectionRange(cursorPosition, cursorPosition);
                        });
                });
        },
    }
  );
} );
 </script>